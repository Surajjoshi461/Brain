{
  "compilerOptions": {
    /* === Basics === */
    "target": "ES2019",                 /* Reasonable JS output for NodeÂ 18+ */
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Module resolution === */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": { "src/*": ["src/*"] },

    /* === Strictness & safety === */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "incremental": true
  },

  /* Tell TS **exactly** where the source lives and what to ignore */
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
